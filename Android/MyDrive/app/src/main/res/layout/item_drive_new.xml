<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_drive_item"
        android:layout_width="@dimen/driveImgSize"
        android:layout_height="@dimen/driveImgSize"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/suit_10"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_onedrive"/>

    <TextView
        android:id="@+id/tv_drive_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sub2TextViewSize"
        android:textColor="@color/colorMainTextView"
        android:layout_toRightOf="@id/iv_drive_item"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/suit_10"
        android:layout_marginEnd="@dimen/suit_10"
        android:text="@string/onedrive"/>

</RelativeLayout>